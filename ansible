##buat file yml
[root@lama ansible]# cat playbook.yml
- hosts: centos
  tasks:
    - name: install httpd
      yum:
     	name: httpd
	state: present
    - name: copy file index.html
      copy:
        src: index.html
        dest: /var/www/html
    - name: start service httpd
      service:
	name: httpd
	state: started
    - name: allow firewall port 80/tcp
      firewalld:
	port: 80/tcp
	state: enabled
	permanent: yes
	immediate: yes
#buat file index.html
  876  echo "<h1> test httpd ansible </h1>" > index.html
  877  cat index.html

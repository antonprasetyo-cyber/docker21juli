[root@lama ~]# mkdir /etc/ansible
[root@lama ~]# vi /etc/ansible/hosts
[server]
192.168.100.76
192.168.100.63


[ubuntu]
192.168.100.76

[centos]
192.168.100.63

[root@lama ~]# ansible server -m ping -u root -k
penjelasan :
"server" = define yg ada di /etc/ansible/hosts
-m ping = modul ping
-u root -k = login


